---
interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<div
  class:list={[
    "rounded-(--radius-lg) border border-border bg-transparent p-6 transition-colors hover:border-foreground/20",
    className,
  ]}
>
  <h3 class="text-lg font-semibold text-foreground">
    {title}
  </h3>
  <p class="mt-2 text-sm text-muted-foreground">
    {description}
  </p>
</div>
