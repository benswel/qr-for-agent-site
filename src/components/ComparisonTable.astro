---
interface Props {
  rows: Array<{
    feature: string;
    traditional: string;
    product: string;
  }>;
  class?: string;
}

const { rows, class: className } = Astro.props;
---

<div class:list={["overflow-x-auto", className]}>
  <table class="w-full min-w-[600px] border-collapse text-left text-sm">
    <thead>
      <tr class="border-b border-border">
        <th class="px-4 py-3 font-medium text-muted-foreground">Feature</th>
        <th class="px-4 py-3 font-medium text-muted-foreground">Traditional QR Services</th>
        <th class="rounded-t-(--radius-md) bg-muted px-4 py-3 font-medium text-foreground">QR for Agent</th>
      </tr>
    </thead>
    <tbody>
      {rows.map((row, i) => (
        <tr class="border-b border-border">
          <td class="px-4 py-3 font-medium text-foreground">{row.feature}</td>
          <td class="px-4 py-3 text-muted-foreground">{row.traditional}</td>
          <td
            class:list={[
              "bg-muted px-4 py-3 font-medium text-foreground",
              i === rows.length - 1 && "rounded-b-(--radius-md)",
            ]}
          >
            <Fragment set:html={row.product} />
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
